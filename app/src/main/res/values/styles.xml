<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewSize" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationViewSize.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/my__black</item>
        <item name="tabIndicatorColor">@color/my_orange</item>
        <item name="tabTextColor">@color/my_grey</item>
        <item name="tabSelectedTextColor">@color/my_white</item>
    </style>

    <style name="MyButton" parent="android:style/Widget.Button">

        <item name="android:textColor">@color/my_white</item>
        <item name="android:background">@color/my_orange</item>
    </style>

    <style name="MyTextViewTrackerLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/my_orange</item>
<!--        <item name="android:textStyle"></item>-->
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTextViewTrackerCounter" parent="android:Widget.TextView">
        <item name="android:textColor">@color/my_white</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MyProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:drawable">@drawable/progress_bar_drawable</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/my_light_black</item>
        <item name="colorControlActivated">@color/my_orange</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>



</resources>